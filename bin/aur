#!/usr/bin/env ruby
# frozen_string_literal: true

require 'docopt'
require 'pathname'
require_relative '../lib/aur/action'

CMDS = %i[bump
          flac2mp3
          info
          inumber
          name2num
          name2tag
          num2name
          set
          sort
          split
          tag2name
          verify].freeze

docopt = <<~EOCMDS
  Usage:
    aur set <tag> <value> <file>...
    aur tag2name <file>...
    aur name2tag <file>...
    aur num2name <file>...
    aur name2num <file>...
    aur inumber <file>...
    aur bump <number> <file>...
    aur split <file>...
    aur info <file>...
    aur sort <file>...
    aur verify <file>...
    aur flac2mp3 <file>...
EOCMDS

def sanitize_keys(options)
  options.transform_keys { |k| k.to_s.delete('-').to_sym }
end

def errors(errs)
  return if errs.empty?

  warn "Completed with #{errs.size} errors."
  errs.each { |err| warn "  #{err}" }
  exit 1
end

begin
  opts = sanitize_keys(Docopt.docopt(docopt))
rescue Docopt::Exit => e
  abort e.message
end

CMDS.each do |cmd|
  next unless opts[cmd]

  cmd = Aur::Action.new(cmd, opts[:'<file>'], opts)
  cmd.run!
  errors(cmd.errs)
  exit
end

abort 'Unhandled command.'
